rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Canvases collection - allow authenticated users to read/write
    match /canvases/{canvasId} {
      allow read, write: if request.auth != null;
    }
    
    // Legacy canvas document - allow authenticated users to read/write
    match /canvas/{canvasId} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
